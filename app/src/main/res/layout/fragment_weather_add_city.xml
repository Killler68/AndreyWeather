<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addcity.AddCityFragment">

    <ImageView
        android:id="@+id/btn_back_add_city"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_group_33532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_change_theme_add_city"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_theme_change"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back_add_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back_add_city" />

    <TextView
        android:id="@+id/text_city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:gravity="center"
        android:text="Мои города"
        android:textColor="#2A2D33"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back_add_city"
        app:layout_constraintEnd_toStartOf="@+id/btn_change_theme_add_city"
        app:layout_constraintStart_toEndOf="@+id/btn_back_add_city"
        app:layout_constraintTop_toTopOf="@+id/btn_back_add_city" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_add_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_city"
        tools:listitem="@layout/recycler_item_weather_add_city" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/style_weather_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_add_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/style_btn_add_city"
        android:paddingHorizontal="20dp"
        android:text="Добавить город"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/btn_geolocation_add_city"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_location"
        app:layout_constraintBottom_toBottomOf="@+id/btn_add_city"
        app:layout_constraintStart_toEndOf="@+id/btn_add_city"
        app:layout_constraintTop_toTopOf="@+id/btn_add_city" />

</androidx.constraintlayout.widget.ConstraintLayout>