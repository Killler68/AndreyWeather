<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="4dp"
    android:backgroundTint="#F3F5F8"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:id="@+id/background_main_weather_add_city"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_name_add_city"
                android:layout_width="118dp"
                android:layout_height="28dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:gravity=""
                android:textSize="16sp"
                android:textColor="#2A2D33"
                android:fontFamily="@font/manrope_medium"
                android:text="Москва"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/temp_min_add_city"
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:layout_marginStart="217dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/manrope_extrabold"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#2A2D33"
                android:text="25° "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/temp_max_add_city"
                android:layout_width="26dp"
                android:layout_height="28dp"
                android:layout_marginStart="251dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="66dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/manrope_extrabold"
                android:textColor="#8F96A1"
                android:gravity="center"
                android:text="25°"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_add_city"
                android:layout_width="30dp"
                android:layout_height="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="293dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="18dp"
                app:srcCompat="@drawable/sun" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>