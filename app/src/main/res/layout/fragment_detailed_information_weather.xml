<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDetailedInformationWeather">


    <ImageView
        android:id="@+id/btn_back_information"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_group_33532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_city_information"
        android:layout_width="279dp"
        android:layout_height="30dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/manrope_extrabold"
        android:gravity="center"
        android:text="Тамбов"
        android:textColor="#2A2D33"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/btn_search_information"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_find_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_change_theme_information"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_theme_change"
        app:layout_constraintEnd_toStartOf="@+id/btn_search_information"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="343dp"
        android:layout_height="386dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="#1E90FF"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_information">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_preview_weather_information"
                android:layout_width="158dp"
                android:layout_height="24dp"
                android:layout_marginStart="93dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="92dp"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center"
                android:text="Сегодня, 12 августа, чт"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_weather_preview_information"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="111dp"
                android:src="@drawable/sun"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_preview_weather_information" />

            <TextView
                android:id="@+id/text_temp_preview_information"
                android:layout_width="279dp"
                android:layout_height="52dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:text="30°"
                android:textColor="@color/white"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_weather_preview_information" />

            <TextView
                android:id="@+id/text_feeling_temperature_preview_information"
                android:layout_width="279dp"
                android:layout_height="24dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="54dp"
                android:fontFamily="@font/manrope_semibold"
                android:gravity="center"
                android:text="Ясно, ощущается как 32°"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_weather_preview_information" />

            <TextView
                android:id="@+id/text_wind_information"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="34dp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center"
                android:text="Ветер"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_feeling_temperature_preview_information" />

            <TextView
                android:id="@+id/text_humidity_information"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="131dp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center"
                android:text="Влажность"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_feeling_temperature_preview_information" />

            <TextView
                android:id="@+id/text_precipitation_information"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginStart="236dp"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="27dp"
                android:fontFamily="@font/manrope_medium"
                android:gravity="center"
                android:text="Осадки"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_feeling_temperature_preview_information" />

            <TextView
                android:id="@+id/speed_wind_information"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="235dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:text="5 м/с"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_wind_information" />

            <TextView
                android:id="@+id/how_mush_humidity_information"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="132dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="131dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:text="20%"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_humidity_information" />

            <TextView
                android:id="@+id/how_much_precipitation_information"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="236dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/manrope_extrabold"
                android:gravity="center"
                android:text="34%"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_precipitation_information" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>